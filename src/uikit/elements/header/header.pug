mixin header(opts)
  header.header
    .header__container.container
      .header__logo
        +logo(opts)
      .header__menu.menu.js-menu
        .menu__icon
          .menu__icon-body
            span
        .menu__body
          nav.menu__nav
            ul.menu__list
              each item in opts.menuItems
                if(item.submenuItems)
                  li.menu__item.js-menu__item--has-submenu
                    p.menu__link.type-body(href=(item.href))= item.text
                    .menu__item-arrow
                      +arrow-svg({name: 'expand-more', fill: '#1F2041', opacity: '0.5'})
                    ul.submenu
                      each itemSubmenu in item.submenuItems
                        li.submenu__item
                          a.submenu__link.type-body(href=(itemSubmenu.href))= itemSubmenu.text
                else
                  li.menu__item
                    a.menu__link.type-body(href=(item.href))= item.text
          .header__buttons
            .header__button-sign-in
              +button-border(opts.buttonSingIn)
            .header__button-sign-up
              +button-color(opts.buttonSingUp)

